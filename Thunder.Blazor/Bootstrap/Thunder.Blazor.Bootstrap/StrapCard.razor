@inherits TComponent
<div class="card @CssStyle" @attributes="AdditionalAttributes">
    @if (Header == null)
    {
        <h5 class="card-header">@Title</h5>
    }
    else
    {
        <div class="card-header header-elements-inline" id="@($"cardhead_{DomId}")">
            @Header
        </div>
    }
    <div class="card-body">
        @ChildContent
    </div>
</div>
@code {
    [Parameter] public RenderFragment Header { get; set; }
    [Parameter] public string Title { get; set; }
}
