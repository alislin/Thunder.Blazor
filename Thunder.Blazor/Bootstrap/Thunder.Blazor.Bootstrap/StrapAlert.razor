@inherits StrapAlertBase
@if (IsVisabled)
{
    <div class="@CssStyle" @attributes="AdditionalAttributes">
        @if (string.IsNullOrWhiteSpace(DataContext?.Text))
        {
            @ChildContent
        }
        else
        {
            @DataContext?.Text
        }
        <button type="button" class="close" @onclick="@(() => { Close();})">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
