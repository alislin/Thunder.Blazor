@inherits StrapDropdownBase
<div class="@CssStyle">
    <StrapButton Caption="@DataContext.Caption" StyleClass="dropdown-toggle" @onclick="@ToggleDropdown" ></StrapButton>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        @foreach (var item in DataContext.ChildNodes)
        {
            if (item.Caption.IndexOf("---") >= 0)
            {
                //分割线
                <div class="dropdown-divider"></div>
            }
            else
            {
                <StrapButton Caption="@item.Caption" @onclick="@item.CommandAction" Tag="ButtonTag.a"></StrapButton>
            }
        }
    </div>
</div>

<div class="btn-group">
    <button type="button" class="btn btn-danger">Action</button>
    <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Separated link</a>
    </div>
</div>