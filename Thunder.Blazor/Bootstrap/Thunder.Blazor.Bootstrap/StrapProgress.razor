@inherits StrapProgressBase
@if (IsVisabled)
{
    <div class="@CssStyle" style="@CssHeight" @attributes="AdditionalAttributes">
        <div class="@CssProgress" style="width: @ProgressPercent">
            @if (ShowLabel)
            {
                @Caption
            }

            @if (ShowValue)
            {
                @ProgressPercent
            }
        </div>
    </div>
}