@page "/"
@namespace BlazorApp.Server.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorApp.Server</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="_content/Thunder.Blazor.Bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="_content/Thunder.Blazor.Animate/animate.min.css">
    <link rel="stylesheet" href="_content/Thunder.Blazor.Noty/bootstrap-v4.min.css">
    <link rel="stylesheet" href="_content/Thunder.Blazor.Noty/noty.min.css">
    <script src="_content/Thunder.Blazor.DomObject/thunder.DomObject.js"></script>
    <script src="_content/Thunder.Blazor/thunder.cssbuild.js"></script>
    <script src="_content/Thunder.Blazor.Animate/thunder.animate.js"></script>
    @*<script src="_content/Thunder.Blazor.JQuery/jquery-3.0.0.min.js"></script>*@
    <script src="_content/Thunder.Blazor.Noty/noty.min.js"></script>
    <script src="_content/Thunder.Blazor.Noty/thunder.noty.js"></script>
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
